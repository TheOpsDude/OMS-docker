{
    "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/scopeBindings.json",
    "contentVersion": "0.0.0.1",
    "scopeBindings": [       
        {
            "scopeTagName": "Global",
            "bindings": [        
                {
                    "find": "__ACR_NAME__",
                    "replaceWith": "$(ACRName)"
                },            
                {
                    "find": "__IMAGE_TAG__",
                    "replaceWith": "$(ImageTag)"
                },
                {
                    "find": "__MANAGED_IDENTITY__",
                    "replaceWith": "$(ManagedIdentity)"
                },
                {
                    "find": "__IMAGE_TAR_FILE__",
                    "replaceWith": "$(ImageTarName)"
                }
            ]
        }                                                                                                                                                
    ]
}